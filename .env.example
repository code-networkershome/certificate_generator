# Certificate Generation System Environment Variables

# Application
APP_NAME=Certificate Generation System
APP_VERSION=1.0.0
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/certificates

# JWT (CHANGE IN PRODUCTION)
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-256-bits
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# OTP Settings
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=5
OTP_RATE_LIMIT_MINUTES=15

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./storage

# Templates
TEMPLATES_PATH=./templates

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# SMTP EMAIL CONFIGURATION
# ============================================
# Set SMTP_ENABLED=true to send real emails
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Certificate Generator
SMTP_USE_TLS=true

# ============================================
# GMAIL SETUP INSTRUCTIONS:
# ============================================
# 1. Enable 2-Factor Authentication on your Google account
# 2. Go to: https://myaccount.google.com/apppasswords
# 3. Generate a new App Password for "Mail"
# 4. Use that 16-character password as SMTP_PASSWORD
# 5. Set SMTP_ENABLED=true
# ============================================

